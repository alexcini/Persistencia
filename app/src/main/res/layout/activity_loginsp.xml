<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loginsp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logonrm.persistencia.LoginspActivity">

    <TextView
        android:text="UsuÃ¡rio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="41dp"
        android:id="@+id/tvusuario" />

    <Button
        android:text="FAZER LOGIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btlogon"
        android:layout_below="@+id/cbcheckBox"
        android:layout_alignLeft="@+id/cbcheckBox"
        android:layout_alignStart="@+id/cbcheckBox"
        android:onClick="logar"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvusuario"
        android:layout_alignRight="@+id/tvusuario"
        android:layout_alignEnd="@+id/tvusuario"
        android:layout_marginTop="47dp"
        android:id="@+id/tvsenha" />

    <CheckBox
        android:text="Continuar Conectado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="52dp"
        android:id="@+id/cbcheckBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvusuario"
        android:layout_toEndOf="@+id/tvusuario"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:id="@+id/etusuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etsenha"
        android:layout_alignTop="@+id/tvsenha"
        android:layout_toRightOf="@+id/btlogon"
        android:layout_toEndOf="@+id/btlogon" />
</RelativeLayout>
